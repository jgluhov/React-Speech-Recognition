{
    "compilerOptions": {
        "module": "commonjs",
        "target": "esnext",
        "skipLibCheck": true,
        "moduleResolution": "node",
        "baseUrl": ".",
        "jsx": "react",
        "typeRoots" : [
            "./src/typings", 
            "./node_modules/@types"
        ],
        "paths": {
            "@components": [
                "src/components"
            ],
            "@containers": [
                "src/containers"
            ],
            "@actions": [
                "src/actions"
            ]
        },
    },
    "exclude": [
        "node_modules"
    ]
}